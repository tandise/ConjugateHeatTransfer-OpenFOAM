FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      T;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 1 0 0 0];

internalField   uniform 0.5;

boundaryField
{
    right
    {
       	type	zeroGradient; 
    }
    left
    {
        type    zeroGradient;
        
    }
    topWall
    {
        type            fixedValue;
	value		uniform 0;
    }
    bottomWall
    {
        type            solidWallMixedTemperatureCoupled;
        neighbourRegionName solidT;
        neighbourPatchName top;
        neighbourFieldName T;
        Kappa           kappaEff;
        value           uniform 0.5;
    }
    frontAndBack
    {
        type            empty;
    }
}


