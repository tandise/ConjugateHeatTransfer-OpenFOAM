FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      T;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 1 0 0 0];

internalField   uniform 0.5;

boundaryField
{
    right
    {
        type            fixedValue;//zeroGradient;
	value		uniform 1;
    }
    left
    {
        type            chtRcTemperature;
        radiation       off;
        K               k;
        remoteField     T;
        value           uniform 0.5;
    }
    bottom
    {
        type            zeroGradient;
    }
    top
    {
        type            zeroGradient;
    }
    frontAndBack
    {
        type            empty;
    }
}


