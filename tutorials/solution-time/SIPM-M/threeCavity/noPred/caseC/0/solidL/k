FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      k;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [1 1 -3 -1 0 0 0];

internalField   uniform 1600;//1.2;

boundaryField
{
    right
    {
        type            chtRcThermalDiffusivity;
        remoteField     kappaEff;
        value           uniform 1600;//1.2;
    }
    top
    {
        type            zeroGradient;
    }
    bottom
    {
        type            zeroGradient;
    }
    left
    {
        type            chtRcThermalDiffusivity;
        remoteField     kappaEff;
        value           uniform 1600;//1.2;
    }

    frontAndBack
    {
        type            empty;
    }
}


